  },
  "bugs": {
    "url": "https://github.com/qilin-editor/qilin-app/issues"
  },
  "chromium-args": "--mixed-context --enable-experimental-web-platform-features",
  "window": {
    "min_height": 600,
    "min_width": 1000,
    "title": "Qilin",
    "frame": false
  },
